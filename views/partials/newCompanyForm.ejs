
<div class="addexpenseWholeContainer" id="containerDelete">
   <div class="newCompanyFormContainer">
    <div class="companyIconDiv">
    <i class="fa-solid fa-building companyIcon"></i>
</div>
<div style="margin:auto">
<h2>Company Information</h2>
<p style="text-align:center">Help us setup your account</p>
</div>
<label>Company Name</label>
    <input type="text" class="companyName"/>
    <label>Industry</label>
    <select id="description" value="" onchange="setIntustryType(this.value)">
        <option  hidden selected>Select description</option>
        <option value="Agriculture">Agriculture</option>
        <option value="Education">Education</option>
        <option value="Restaurant">Restaurant</option>
        <option value="Software">Software</option>
        <option value="Vechicle">Vechicle</option>
        <option value="Custom" id="customOption">custom</option>
    </select>
    <label>Phone Number</label>
    <input type="tel" name="phone"  pattern="[0-9]{10}" id="phoneNo" required>
    <p class="error">Please Enter a valid details</p>
    <button onclick="addCompanyDetailsCheck(this.value)" value="" id="updateCompanyDetailsButton">Update</button>
   </div>
</div>